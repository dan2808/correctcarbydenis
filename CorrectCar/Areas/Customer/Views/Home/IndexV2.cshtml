@using CorrectCar.Models
@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<style>
    .table-row {
        position: relative;
    }

        .table-row img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .fixed-height-table tbody tr {
        height: 20vh;
    }
</style>

<div class="col-12 p-3 mt-4">
    <h2 class="text-muted text-center"> Masini in stock </h2>
</div>

<div class="container p-1">

    <table class="table table-hover table-striped fixed-height-table" style="width:100%">
        <thead>
            <tr class="text-left">
                <th>
                    Marca
                </th>
                <th>
                    Model
                </th>

                <th>
                    An de Fabricatie
                </th>
                <th>
                    Pret
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr class="text-left">
                    <td width="20%">
                        @obj.Marca
                    </td>
                    <td width="20%">
                        @obj.Model
                    </td>
                    <td width="20%">
                        @obj.AnFabricatie
                    </td>
                    <td width="20%">
                        @obj.Pret
                    </td>
                    <td width="20%">
                        <div style="position:relative;height:100%;">
                            <img src="@obj.ListImageUrl" class="card-img-top rounded-top" style="border:none; position: absolute; top: 0; left: 0;" />
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>

}